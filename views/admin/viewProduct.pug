extends ./header.pug
block append head 
  link(href="/css/viewProduct.css", rel='stylesheet')
block content
    .container-fluid
        a(href="/admin/products/"+product._id+"/edit") Edit Product
        form(action = "/admin/products/"+product._id+"/delete?_method=DELETE" enctype="multipart/form-data" method = "POST")
            button(type="subbmit") Delete Product
        br
        h2 
            = "Name: " + product.name
        br
    
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
        -var count = 0
        each image of product.images
            -count += 1
        -for(let i=0;i<count;i++){
            -if(i==0){
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            -}
            -else{
                li(data-target="#carouselExampleIndicators" data-slide-to=i)
            -}
        -}    
        </ol>
        <div class="carousel-inner">
            -for(let i=0;i<count;i++){
                -if(i==0){
                    <div class="carousel-item active">
                        img(class="d-block w-100" src="/img/"+product.images[i].filename alt="First slide")
                    </div>
                -}
                -else{
                    <div class="carousel-item">
                        img(class="d-block w-100" src="/img/"+product.images[i].filename alt="First slide")
                    </div>
                -}
            -}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
        br
        h4 Product Details 
        table 
            tr
                th Name 
                th Value 
            each value,key in product.details 
                tr 
                    td 
                        = key 
                    td 
                        = value 
        br
        p 
            strong
                =  "Description: " 
            = product.description
        br
        p
            strong
                = "Category: "
            = product.category
        br
        p
            strong
                = "Price: " 
            = product.price
        br
        p 
            strong Product Brochure: 
            a(href="/brochures/"+product.brochure download) 
                = product.brochure

